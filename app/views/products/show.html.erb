 <div class="col-md-6">
    <div class="thumbnail">
    	<%= link_to "Add to Cart", product_path(@product.permalink), :method => :post, :class => "btn btn-warning" %>
        <%= image_tag @product.default_image.path, :width => '400px', :height => '300px' %>
        <div class="caption-full">
        	<% if @product.has_variants? %>
    			<table class="variants">
    				<% for variant in @product.variants %>
       				 <tr>
        			 <td></td>
        			 </tr>
        				<% if variant.in_stock? %>
            				<p class="stock yes">Item is in Stock!</p>
        				<% end %>
					<% end %>
    			</table>
			<% end %>
		    <h4 class="pull-right"><%= number_to_currency @product.price %></h4>
            <td class="buy">
            <h4><%= link_to @product.name, product_path(@product.permalink)%></h4>
           <p><%= simple_format @product.description %></p>
        </div>
    </div>


  	
	<% unless @attributes.empty? %>
    <hr>
	<div class="container">
		<div class="row">
			<div class="col-md-7">
		  		<table class="attributes table table-striped">
		    		<% for attribute in @attributes %>
		      			<tr>
		        			<th>
		          				<%= attribute.key %>
		        			</th>
		        			<td>
		          				<%= link_to attribute.value, product_filter_path(:key => attribute.key, :value => attribute.value) %>
		        			</td>
		      			</tr>
		    		<% end %>
		  		</table>
			</div>
		</div>
	</div>
<% end %>		


