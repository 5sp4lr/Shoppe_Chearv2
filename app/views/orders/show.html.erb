<div class="container">
<h2>Your Shopping Cart</h2>

<% if has_order? && current_order.has_items? %>

<%= render 'items', :order => current_order %>

<%= link_to 'Empty Cart', basket_path, :method => :delete, :class => "btn btn-warning" %>

<% else %>
 
<h4> There are currently no items in your Cart. To add an item, please click the add to cart button when viewing a product </h4>
<%= link_to "Home", root_path, :class => "btn btn-success"%>
<% end %>	
</div>